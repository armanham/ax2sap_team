<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
        <property name="hibernate.dialect">org.hibernate.dialect.PostgreSQLDialect</property>
        <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
        <property name="hibernate.connection.username">postgres</property>
        <property name="hibernate.connection.password">2232</property>
        <property name="hibernate.connection.url">jdbc:postgresql://localhost:5432/hibernate_db</property>

        <property name="hbm2ddl.auto">update</property>

        <property name="show_sql">true</property>

        <mapping class="com.bdg.airport_management_system.persistent.AddressPer"/>
        <mapping class="com.bdg.airport_management_system.persistent.CompanyPer"/>
        <mapping class="com.bdg.airport_management_system.persistent.PassengerPer"/>
        <mapping class="com.bdg.airport_management_system.persistent.TripPer"/>
        <mapping class="com.bdg.airport_management_system.persistent.PassInTripPer"/>
        <mapping class="com.bdg.airport_management_system.persistent.common.BaseEntity"/>
    </session-factory>
</hibernate-configuration>